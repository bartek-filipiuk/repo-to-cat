---
/**
 * Header Component
 *
 * Navigation header with logo, user info, and logout button.
 */

import type { User } from '../lib/auth';

interface Props {
  user: User;
}

const { user } = Astro.props;
---

<header class="bg-oxide-gray border-b border-oxide-gray-light">
  <nav class="container mx-auto px-4 py-4 max-w-container">
    <div class="flex items-center justify-between">
      <!-- Logo/Title -->
      <a href="/" class="text-2xl font-bold text-oxide-green hover:text-oxide-green-dim transition-colors">
        Repo-to-Cat
      </a>

      <!-- User Info & Logout -->
      <div class="flex items-center gap-4">
        <span class="text-oxide-text-dim">
          {user.username}
        </span>

        <form method="POST" action="/api/logout" class="inline">
          <button
            type="submit"
            class="text-oxide-text-dim hover:text-oxide-green transition-colors px-4 py-2 rounded hover:bg-oxide-gray-light"
          >
            Logout
          </button>
        </form>
      </div>
    </div>
  </nav>
</header>

<script>
  const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:8000';

  // Handle logout form submission via fetch
  document.addEventListener('DOMContentLoaded', () => {
    const logoutForm = document.querySelector('form[action="/api/logout"]');

    if (logoutForm) {
      logoutForm.addEventListener('submit', async (e) => {
        e.preventDefault();

        try {
          const response = await fetch(`${API_URL}/auth/logout`, {
            method: 'POST',
            credentials: 'include',
          });

          if (response.ok) {
            // Clear client-side session
            document.cookie = 'session_token=; path=/; max-age=0';
            // Redirect to login
            window.location.href = '/login';
          }
        } catch (error) {
          console.error('Logout failed:', error);
          // Still redirect to login on error
          window.location.href = '/login';
        }
      });
    }
  });
</script>
